<atom:feed xmlns:sword="http://purl.org/net/sword/terms/"
           xmlns:atom="http://www.w3.org/2005/Atom"
           xmlns:lom="http://lockssomatic.info/SWORD2">

    <atom:category scheme="http://purl.org/net/sword/terms/state"
                   term="{{ state }}"
                   label="State">
        {{ stateDescription }}
    </atom:category>

    <atom:entry>

        <atom:category scheme="http://purl.org/net/sword/terms"
                       term="http://purl.org/net/sword/terms/originalDeposit"
                       label="Original Deposit"/>

        <sword:depositedOn>{{ deposit.dateDeposited|date }}</sword:depositedOn>
        <lom:agreement>{{ deposit.agreement }}</lom:agreement>

        {% for content in deposit.content %}
            <sword:originalDeposit href="{{ url('original_deposit', {'providerUuid': deposit.contentprovider.uuid, 'depositUuid': deposit.uuid, 'filename': content.filename}) }}" />
        {% endfor %}
        
    </atom:entry>
</atom:feed>
