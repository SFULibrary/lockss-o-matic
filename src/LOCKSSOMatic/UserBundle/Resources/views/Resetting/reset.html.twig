{% extends "::base.html.twig" %}

{% block pageheader %}
    <h1>Reset Password</h1>        
{% endblock %}

{% block body %}
    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form form-horizontal">
        {{ form_widget(form) }}
        <div class='form-group'>
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" class="btn-default btn">Reset</button></div>
        </div>
    </form>
{% endblock %}
