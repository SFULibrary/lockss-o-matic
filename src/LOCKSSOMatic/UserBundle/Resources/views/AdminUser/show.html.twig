{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>User</h1>
{% endblock %}

{% block body -%}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('admin_user') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('admin_user_delete', { 'id': entity.id }) }}" class="btn btn-default js-confirm" data-confirm="Are you sure you want to delete this user?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Email</th>
                <td><a href="mailto:{{ entity.email }}">{{ entity.email}}</a></td>
            </tr>
            <tr>
                <th>Full name</th>
                <td>{{ entity.fullname }}</td>
            </tr>
            <tr>
                <th>Institution</th>
                <td>{{ entity.institution }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if entity.enabled %} Yes {% else %} No {% endif %}</td>
            </tr>
            <tr>
                <th>Last login</th>
                <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in entity.roles %}
                        {{ role }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
