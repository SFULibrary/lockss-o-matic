<service xmlns:dcterms="http://purl.org/dc/terms/"
    xmlns:sword="http://purl.org/net/sword/terms/"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:lom="http://purl.org/lockssomatic/terms/SWORD"
    xmlns="http://www.w3.org/2007/app">
    <sword:version>2.0</sword:version>
    <!-- sword:maxUploadSize is configurable per Content Provider. -->
    <sword:maxUploadSize>{{ maxFileSize }}</sword:maxUploadSize>
    <!-- lom:uploadChecksumType is configurable per Content Provider. -->
    <lom:uploadChecksumType>{{ checksumType }}</lom:uploadChecksumType>
    <workspace>
        <atom:title>{{ site_name }}</atom:title>     
        <!-- Each LOCKSS-O-Matic content provider will have its own SWORD collection,
            identified in the 'On-Behalf-Of' header sent along with the GET request
            for this document. -->
        <collection href="{{base_url}}/api/sword/2.0/col-iri/{{onBehalfOf}}">
            <atom:title>{{ content_provider_name }}</atom:title>
            <accept>application/atom+xml;type=entry</accept> 
            <sword:mediation>true</sword:mediation>
        </collection>
    </workspace>
</service>
