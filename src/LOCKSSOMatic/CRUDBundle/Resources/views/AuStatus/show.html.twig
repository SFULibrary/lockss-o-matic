{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AuStatus</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Boxhostname</th>
                <td>{{ entity.boxHostname }}</td>
            </tr>
            <tr>
                <th>Querydate</th>
                <td>{{ entity.queryDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Propertykey</th>
                <td>{{ entity.propertyKey }}</td>
            </tr>
            <tr>
                <th>Propertyvalue</th>
                <td>{{ entity.propertyValue }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('austatus') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('austatus_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
