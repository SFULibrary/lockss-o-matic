{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AuStatus list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Boxhostname</th>
                <th>Querydate</th>
                <th>Propertykey</th>
                <th>Propertyvalue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('austatus_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.boxHostname }}</td>
                <td>{% if entity.queryDate %}{{ entity.queryDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.propertyKey }}</td>
                <td>{{ entity.propertyValue }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('austatus_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('austatus_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('austatus_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
