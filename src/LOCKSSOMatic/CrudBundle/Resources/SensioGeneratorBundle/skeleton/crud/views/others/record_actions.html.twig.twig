<div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
{% if ('edit' in actions) and (not hide_edit) %}
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity."~ identifier ~" }) }}" }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_delete', { 'id': entity."~ identifier ~" }) }}" }}" class="btn btn-default js-confirm" data-confirm="Are you sure you want to delete this {{ entity }}?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
{% endif %}
    </div>
</div>
