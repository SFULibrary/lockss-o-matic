{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Box List</h1>
{% endblock %}

{% block body -%}

    <div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('box_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
        </div>
    </div>
    <table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Hostname</th>
                <th>Protocol</th>
                <th>Port</th>
                <th>Pln</th>
                <th>Ipaddress</th>
                <th>Username</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('box_show', { 'id': entity.id }) }}">{{ entity.hostname }}</a></td>
                    <td>{{ entity.protocol }}</td>
                    <td>{{ entity.port }}</td>
                    <td><a href="{{ path('pln_show', {'id': entity.pln.id }) }}">{{ entity.pln.name }}</a></td>
                    <td>{{ entity.ipAddress }}</td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.password }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
