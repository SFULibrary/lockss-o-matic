{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Box</h1>
{% endblock %}

{% block body -%}
	<div class="btn-toolbar">
		<div class="btn-group pull-right">
			<a href="{{ path('box') }}" class="btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Back
			</a>
			<a href="{{ path('box_edit', { 'id': entity.id }) }}" class="btn btn-default">
				<span class='glyphicon glyphicon-edit'></span> Edit
			</a>
			<a href="{{ path('box_delete', { 'id': entity.id }) }}" class="btn btn-default js-confirm" data-confirm="Are you sure you want to delete this Box?">
				<span class='glyphicon glyphicon-remove'></span> Delete
			</a>
		</div>
	</div>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Hostname</th>
                <td>{{ entity.hostname }}</td>
            </tr>
            <tr>
                <th>Protocol</th>
                <td>{{ entity.protocol }}</td>
            </tr>
            <tr>
                <th>Port</th>
                <td>{{ entity.port }}</td>
            </tr>
            <tr>
                <th>Ipaddress</th>
                <td>{{ entity.ipAddress }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
			<tr>
				<th>Pln</th>
				<td><a href="{{ path('pln_show', {'id': entity.pln.id }) }}">{{ entity.pln.name }}</a></td>
			</tr>
        </tbody>
    </table>
{% endblock %}
