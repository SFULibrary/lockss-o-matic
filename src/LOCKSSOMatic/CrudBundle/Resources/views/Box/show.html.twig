{% extends '::base.html.twig' %}

    
{% block pageheader %}
    <h1>Box</h1>
{% endblock %}
    
{% block body -%}
        <ul class="record_actions">
    <li>
        <a href="{{ path('box') }}">
            Back to the list
        </a>
    </li>

    <li>
        <a href="{{ path('box_edit', { 'id': entity.id }) }}">
            <span class='glyphicon glyphicon-edit'></span>
        </a>
    </li>

    <li>
        <a href="{{ path('box_delete', { 'id': entity.id }) }}" class="js-confirm" data-confirm="Are you sure you want to delete this Box?">
            <span class='glyphicon glyphicon-remove'></span>
        </a>
    </li>
</ul>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Hostname</th>
                <td>{{ entity.hostname }}</td>
            </tr>
            <tr>
                <th>Ipaddress</th>
                <td>{{ entity.ipAddress }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
