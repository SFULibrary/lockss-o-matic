{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>DepositStatus</h1>
{% endblock %}

{% block body -%}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('depositstatus', { 'depositId': depositId }) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Deposit</th>
                <td><a href="{{ path('deposit_show', { 'id': entity.id }) }}">{{ entity.deposit.uuid }}</a></td>
            <tr>
                <th>Agreement</th>
                <td>{{ entity.agreement }}</td>
            </tr>
            <tr>
                <th>Querydate</th>
                <td>{{ entity.queryDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>

                    <table class="record_properties table table-striped table-bordered table-hover">
                        <caption style="caption-side: bottom">
                            <ul class="text-muted list-unstyled">
                                <li><strong>*</strong> The box was not reachable</li>
                                <li><strong>-</strong> The box has not harvested the content yet.</li>
                            </ul>
                        </caption>
                        <tr>
                            <td></td>
                            {% for key in entity.status|first|keys %}
                                <th>{{ content[key].url|truncate(20, false, '...') }}</th>
                                {% endfor %}
                        </tr>
                        {% for key in entity.status|keys %}
                            <tr>
                                <th>{{ boxes[key].hostname }}</th>
                                    {% for k in entity.status[key] %}
                                    <td>{{ k|truncate(20, false, '...') }}</td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        <tr>
                            <th>Expected</th>
                                {% for key in entity.status|first|keys %}
                                <td>{{ content[key].checksumValue|truncate(20, false, '...') }}</td>
                            {% endfor %}
                        </tr>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
