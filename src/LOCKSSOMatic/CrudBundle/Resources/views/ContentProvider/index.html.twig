{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>ContentProvider List</h1>
{% endblock %}

{% block body -%}

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Uuid</th>
                <th>Permissionurl</th>
                <th>Name</th>
                <th>Ipaddress</th>
                <th>Hostname</th>
                <th>Checksumtype</th>
                <th>Maxfilesize</th>
                <th>Maxausize</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contentprovider_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.uuid }}</td>
                <td>{{ entity.permissionurl }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.ipAddress }}</td>
                <td>{{ entity.hostname }}</td>
                <td>{{ entity.checksumType }}</td>
                <td>{{ entity.maxFileSize }}</td>
                <td>{{ entity.maxAuSize }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contentprovider_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contentprovider_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

        <ul>
        <li>
            <a href="{{ path('contentprovider_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
