{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Content List</h1>
{% endblock %}

{% block body -%}

	<div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('content_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
        </div>
    </div>
	<table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Title</th>
                <th>Size</th>
                <th>Datedeposited</th>
                <th>Checksumtype</th>
                <th>Checksumvalue</th>
                <th>Recrawl</th>
            </tr>
        </thead>
        <tbody>
			{% for entity in entities %}
				<tr>
					<td><a href="{{ path('content_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
					<td>{{ entity.url }}</td>
					<td>{{ entity.title }}</td>
					<td>{{ entity.size }}</td>
					<td>{% if entity.dateDeposited %}{{ entity.dateDeposited|date('Y-m-d H:i:s') }}{% endif %}</td>
					<td>{{ entity.checksumType }}</td>
					<td>{{ entity.checksumValue }}</td>
					<td>{{ entity.recrawl }}</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
