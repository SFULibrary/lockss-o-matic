{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Deposit List</h1>
{% endblock %}

{% block body -%}

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Datedeposited</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('deposit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.uuid }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.summary }}</td>
                <td>{% if entity.dateDeposited %}{{ entity.dateDeposited|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('deposit_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('deposit_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

        <ul>
        <li>
            <a href="{{ path('deposit_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
