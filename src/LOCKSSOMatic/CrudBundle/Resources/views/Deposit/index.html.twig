{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Deposit List</h1>
{% endblock %}

{% block body -%}

	<div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('deposit_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
        </div>
    </div>
	<table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Uuid</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Datedeposited</th>
            </tr>
        </thead>
        <tbody>
			{% for entity in entities %}
				<tr>
					<td><a href="{{ path('deposit_show', { 'id': entity.id }) }}">{{ entity.uuid }}</a></td>
					<td>{{ entity.title }}</td>
					<td>{{ entity.summary }}</td>
					<td>{% if entity.dateDeposited %}{{ entity.dateDeposited|date('Y-m-d H:i:s') }}{% endif %}</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
