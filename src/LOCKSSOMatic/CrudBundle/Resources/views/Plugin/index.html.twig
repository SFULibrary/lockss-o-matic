{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Plugin List</h1>
{% endblock %}

{% block body -%}

	<div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('plugin_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
        </div>
    </div>
	<table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Path</th>
            </tr>
        </thead>
        <tbody>
			{% for entity in entities %}
				<tr>
					<td><a href="{{ path('plugin_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
					<td>{{ entity.path }}</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
