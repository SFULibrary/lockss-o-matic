{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Plugin</h1>
{% endblock %}

{% macro plugin_props(props) %}
    {% import _self as macros %}
    <ul>
        {% for prop in props %}
            <li>{{ prop.propertyKey }}:
                {% if prop.hasChildren() %}
                    {{ macros.plugin_props(prop.children) }}
                {% else %}
                    {{ prop.propertyValue }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

{% block body -%}
	<div class="btn-toolbar">
		<div class="btn-group pull-right">
			<a href="{{ path('plugin') }}" class="btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Back
			</a>
			<a href="{{ path('plugin_edit', { 'id': entity.id }) }}" class="btn btn-default">
				<span class='glyphicon glyphicon-edit'></span> Edit
			</a>
			<a href="{{ path('plugin_delete', { 'id': entity.id }) }}" class="btn btn-default js-confirm" data-confirm="Are you sure you want to delete this Plugin?">
				<span class='glyphicon glyphicon-remove'></span> Delete
			</a>
		</div>
	</div>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ entity.path }}</td>
            </tr>
            <tr>
                <th>Content Owners</th>
                <td>
                    <ul>
                    {% for provider in entity.contentProviders %}
                        <li>{{ provider }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <h2>Identifier</h2>
    {{ entity.getPluginIdentifier() }}

    <h2>Definitional Properties</h2>
    <ul>
        {% for prop in entity.getDefinitionalProperties() %}
            <li>{{ prop }}</li>
            {% endfor %}
    </ul>

    <h2>All Plugin Properties</h2>
    {% import _self as macros %}
    {{ macros.plugin_props(entity.getRootPluginProperties()) }}


{% endblock %}
