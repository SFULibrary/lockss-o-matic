{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>PlnProperty List</h1>
{% endblock %}

{% block body -%}

	<div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('plnproperty_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
        </div>
    </div>
	<table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Propertykey</th>
                <th>Propertyvalue</th>
				<th>Pln</th>
                <th>Islist</th>
            </tr>
        </thead>
        <tbody>
			{% for entity in entities %}
				<tr>
					<td><a href="{{ path('plnproperty_show', { 'id': entity.id }) }}">{{ entity.propertyKey }}</a></td>
					<td>{{ entity.propertyValue }}</td>
					<td>{{ entity.pln.name }}</td>
					<td>{{ entity.isList }}</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
