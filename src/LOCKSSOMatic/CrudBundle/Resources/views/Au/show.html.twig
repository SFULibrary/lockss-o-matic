{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Au</h1>
{% endblock %}

{% macro plugin_props(props) %}
    {% import _self as macros %}
    <ul>
        {% for prop in props %}
            <li>{{ prop.propertyKey }}:
                {% if prop.hasChildren() %}
                    {{ macros.plugin_props(prop.children) }}
                {% else %}
                    {{ prop.propertyValue }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

{% block body -%}
    <ul class="record_actions">
        <li>
            <a href="{{ path('au') }}">
                Back to the list
            </a>
        </li>

        <li>
            <a href="{{ path('au_edit', { 'id': entity.id }) }}">
                <span class='glyphicon glyphicon-edit'></span>
            </a>
        </li>

        <li>
            <a href="{{ path('au_delete', { 'id': entity.id }) }}" class="js-confirm" data-confirm="Are you sure you want to delete this Au?">
                <span class='glyphicon glyphicon-remove'></span>
            </a>
        </li>
    </ul>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Managed</th>
                <td>{{ entity.managed }}</td>
            </tr>
            <tr>
                <th>Auid</th>
                <td>{{ entity.auid }}</td>
            </tr>
            <tr>
                <th>Size (kB)</th>
                <td>{{ entity.contentSize }}</td>
            </tr>
            <tr>
                <th>Manifesturl</th>
                <td><a href="{{ entity.manifestUrl }}">{{ entity.manifestUrl }}</a></td>
            </tr>
            <tr>
                <th>Plugin</th>
                <td><a href="{{ path('plugin_show', {'id': entity.plugin.id}) }}">{{ entity.plugin }}</a></td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ entity.comment }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Content</h2>
    {% set content = entity.content %}
    <p>This au has {{ content | length }} content entries.</p>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Url</th>
                <th>Size</th>
                <th>Datedeposited</th>
                <th>Recrawl</th>
            </tr>
        </thead>
        <tbody>
            {% for c in content %}
                <tr>
                    <td><a href="{{ path('content_show', { 'id': c.id }) }}">{{ c.title }}</a></td>
                    <td>{{ c.url }}</td>
                    <td>{{ c.size }}</td>
                    <td>{% if c.dateDeposited %}{{ c.dateDeposited|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ c.recrawl }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>All Properties</h2>
    {% import _self as macros %}
    {{ macros.plugin_props(entity.getRootPluginProperties()) }}

{% endblock %}
