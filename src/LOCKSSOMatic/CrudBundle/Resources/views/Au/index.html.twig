{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Au List</h1>
{% endblock %}

{% block body -%}

    <table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Managed</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('au_show', {'id': entity.id}) }}">{{ entity.auName }}</a></td>
                    <td>{% if entity.managed %} Yes {% else %} No {% endif %}</td>
                    <td>{{ entity.comment }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
