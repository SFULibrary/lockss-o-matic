{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Au List</h1>
{% endblock %}

{% block body -%}

	<div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('au_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
        </div>
    </div>
	<table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Auid</th>
                <th>Managed</th>
                <th>Austarturl</th>
                <th>Manifesturl</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
			{% for entity in entities %}
				<tr>
					<td><a href="{{ path('au_show', {'id': entity.id}) }}">{{ entity.auid|preg_replace('/([|~&])/', '&#8203;$1')|raw }}</a></td>
					<td>{% if entity.managed %} Yes {% else %} No {% endif %}</td>
					<td><a href="{{ entity.auStartUrl }}">{{ entity.auStartUrl|preg_replace('/\\//', '&#8203;/')|raw }}</a></td>
					<td><a href="{{ entity.manifestUrl }}">{{ entity.manifestUrl|preg_replace('/\\//', '&#8203;/')|raw }}</a></td>
					<td>{{ entity.comment }}</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
