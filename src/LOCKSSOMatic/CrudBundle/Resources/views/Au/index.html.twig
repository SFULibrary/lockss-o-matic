{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Au List</h1>
{% endblock %}

{% block body -%}

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Managed</th>
                <th>Auid</th>
                <th>Manifesturl</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('au_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.managed %} Yes {% else %} No {% endif %}</td>
                <td>{{ entity.auid|preg_replace('/([|~&])/', '&#8203;$1')|raw }}</td>
                <td>{{ entity.manifestUrl|preg_replace('/\\//', '&#8203;/')|raw }}</td>
                <td>{{ entity.comment }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('au_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('au_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

        <ul>
        <li>
            <a href="{{ path('au_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
