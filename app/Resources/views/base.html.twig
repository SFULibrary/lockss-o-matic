<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% stylesheets '@bootstrap_css' %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
        {% endstylesheets %}

        {% stylesheets 'bundles/lockssomatic*/css/*' filter='cssrewrite' %}
        <link rel='stylesheet' href='{{ asset_url }}'>
        {% endstylesheets %}

        {% block stylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">LOCKSSOMatic</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>

                        {% if app.user %}
                            <li class="dropdown" role="menu"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Entities <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('au') }}">Archival Units</a></li>
                                    <li><a href="{{ path('auproperty') }}">Properties</a></li>
                                    <li><a href="{{ path('austatus') }}">Status</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li><a href="{{ path('box') }}">Boxes</a></li>
                                    <li><a href="{{ path('boxstatus') }}">Status</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li><a href="{{ path('content') }}">Content</a></li>
                                    <li><a href="{{ path('contentowner') }}">Owners</a></li>
                                    <li><a href="{{ path('contentprovider') }}">Providers</a></li>
                                    <li><a href="{{ path('deposit') }}">Deposits</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li><a href="{{ path('pln') }}">Networks</a></li>
                                    <li><a href="{{ path('plnproperty') }}">Properties</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li><a href="{{ path('plugin') }}">Plugins</a></li>
                                    <li><a href="{{ path('pluginproperty') }}">Plugin Properties</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                    <li role='presentation' class='divider'></li>
                                    <li><a href='{{ path('admin_user') }}'>Users</a></li>
                                    <li><a href='{{ path('log') }}'>Access logs</a></li>
                                    <li><a href='{{ path('lom_plugin') }}'>LOM Plugins</a></li>
                                    {% endif %}
                                </ul>
                            </li>
                        {% endif %}

                    </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                        <li>
                            <a href="{{ path(app.request.attributes.get('_route'),
                                    app.request.attributes.get('_route_params')|merge({'_switch_user': '_exit' })) }}">
                                Exit {{ app.user.username }}
                            </a>
                        </li>
                    {% elseif is_granted('ROLE_ADMIN') %}
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Switch user <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                {% for user in userList() %}
                                    <li>
                                        <a href="{{ path(app.request.attributes.get('_route'),
                                         app.request.attributes.get('_route_params')|merge({'_switch_user': user.username })) }}">
                                            {{ user.username }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}

                    {% if app.user %}
                        <li><a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a></li>
                            {% if not is_granted('ROLE_PREVIOUS_ADMIN') %}
                            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                            {% endif %}
                        {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                        {% endif %}
                </ul>

                </div><!--/.nav-collapse -->
            </div>
        </nav>        

        <div class="container">
            {% set _pageheader = block("pageheader") %}
            {% if _pageheader is not empty %}
                <div class="page-header">
                    {{ _pageheader|raw }}
                </div>
            {% endif %}

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}
            {% endblock %}
        </div>

        {% javascripts '@jquery' '@bootstrap_js' 'bundles/app/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}        
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
